#!/usr/bin/env bash
_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export MEILLISEARCH_IMAGE=${MEILLISEARCH_IMAGE:="$(awk -F '[ :]' '{print $2}' "${_DIR}/Dockerfile")"}
export MEILLISEARCH_IMAGE_VERSION=${MEILLISEARCH_IMAGE_VERSION:="$(awk -F '[ :]' '{print $3}' "${_DIR}/Dockerfile")"}
export MEILLISEARCH_ROOT=${MEILLISEARCH_ROOT:="$DOKKU_LIB_ROOT/services/meillisearch"}
export MEILLISEARCH_HOST_ROOT=${MEILLISEARCH_HOST_ROOT:=$MEILLISEARCH_ROOT}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=()
export PLUGIN_COMMAND_PREFIX="meillisearch"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$MEILLISEARCH_ROOT
export PLUGIN_DATA_HOST_ROOT=$MEILLISEARCH_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(7700)
export PLUGIN_DATASTORE_WAIT_PORT=7700
export PLUGIN_DEFAULT_ALIAS="DATABASE"
export PLUGIN_DISABLE_PULL=${MEILLISEARCH_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="MEILLISEARCH_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_MEILLISEARCH"
export PLUGIN_IMAGE=$MEILLISEARCH_IMAGE
export PLUGIN_IMAGE_VERSION=$MEILLISEARCH_IMAGE_VERSION
export PLUGIN_SCHEME="meillisearch"
export PLUGIN_SERVICE="Meillisearch"
export PLUGIN_VARIABLE="MEILLISEARCH"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
export PLUGIN_CONFIG_SUFFIX="data"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export PLUGIN_BUSYBOX_IMAGE="busybox:1.31.1-uclibc"
export PLUGIN_AMBASSADOR_IMAGE="dokku/ambassador:0.3.3"
export PLUGIN_S3BACKUP_IMAGE="dokku/s3backup:0.10.3"
export PLUGIN_WAIT_IMAGE="dokku/wait:0.4.3"

export MEILLISEARCH_CONFIG_OPTIONS=${MEILLISEARCH_CONFIG_OPTIONS:=""}
