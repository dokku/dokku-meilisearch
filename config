#!/usr/bin/env bash
_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
export MEILISEARCH_IMAGE=${MEILISEARCH_IMAGE:="$(awk -F '[ :]' '{print $2}' "${_DIR}/Dockerfile")"}
export MEILISEARCH_IMAGE_VERSION=${MEILISEARCH_IMAGE_VERSION:="$(awk -F '[ :]' '{print $3}' "${_DIR}/Dockerfile")"}
export MEILISEARCH_ROOT=${MEILISEARCH_ROOT:="$DOKKU_LIB_ROOT/services/meilisearch"}
export DOKKU_LIB_HOST_ROOT=${DOKKU_LIB_HOST_ROOT:=$DOKKU_LIB_ROOT}
export MEILISEARCH_HOST_ROOT=${MEILISEARCH_HOST_ROOT:="$DOKKU_LIB_HOST_ROOT/services/meilisearch"}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=("backup" "backup-auth" "backup-deauth" "backup-schedule" "backup-schedule-cat" "backup-set-encryption" "backup-unschedule" "backup-unset-encryption" "clone" "connect" "export" "import")
export PLUGIN_COMMAND_PREFIX="meilisearch"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$MEILISEARCH_ROOT
export PLUGIN_DATA_HOST_ROOT=$MEILISEARCH_HOST_ROOT
export PLUGIN_DATASTORE_PORTS=(7700)
export PLUGIN_DATASTORE_WAIT_PORT=7700
export PLUGIN_DEFAULT_ALIAS="MEILISEARCH"
export PLUGIN_DISABLE_PULL=${MEILISEARCH_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="MEILISEARCH_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_MEILISEARCH"
export PLUGIN_IMAGE=$MEILISEARCH_IMAGE
export PLUGIN_IMAGE_VERSION=$MEILISEARCH_IMAGE_VERSION
export PLUGIN_SCHEME="http"
export PLUGIN_SERVICE="Meilisearch"
export PLUGIN_VARIABLE="MEILISEARCH"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
export PLUGIN_CONFIG_SUFFIX="data"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

export PLUGIN_BUSYBOX_IMAGE="busybox:1.34.1-uclibc"
export PLUGIN_AMBASSADOR_IMAGE="dokku/ambassador:0.5.0"
export PLUGIN_S3BACKUP_IMAGE="dokku/s3backup:0.14.0"
export PLUGIN_WAIT_IMAGE="dokku/wait:0.6.0"

export MEILISEARCH_CONFIG_OPTIONS=${MEILISEARCH_CONFIG_OPTIONS:=""}
